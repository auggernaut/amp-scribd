  <body>
    <amp-sidebar id="sidebar"
      class="sample-sidebar"
      layout="nodisplay"
      side="left">
      <h3 id='menu-header'><amp-img alt="Scribd" class="logo" src="/images/scribd_l_logo.png" width="150" height="40"/>Scribd</h3>
      <nav toolbar="(min-width: 784px)"
        toolbar-target="target-element-left">
        <ul id='menu'>
          <li class='menu_item'><i class="fas fa-home"></i>Home</li>
          <li class='menu_item'><i class="fas fa-bookmark"></i>Saved</li>
          <li class='menu_item'><i class="fas fa-chart-line"></i>Bestsellers</li>
          <li class='menu_item'><i class="fas fa-book-open"></i>Books</li>
          <li class='menu_item'><i class="fas fa-headphones-alt"></i>Audiobooks</li>
          <li class='menu_item'><i class="fas fa-newspaper"></i>Magazines</li>
          <li class='menu_item'><i class="fas fa-file-alt"></i>Documents</li>
          <li class='menu_item'><i class="fas fa-music"></i>Sheet Music</li>
        </ul>
      </nav>

    </amp-sidebar>
    <div id="target-element-left"></div>
    <div class="sticky_header">
      <header tabindex="-1">
        <div class="header_container flex_row simple">
          <div class="flex_col">
            <button class="logo_button flex_row" on="tap:sidebar.toggle" aria-label='scribd menu'>
              <amp-img alt="Scribd" class="logo" src="/images/scribd_s_logo.png" width="22" height="26"/>
            </a>
          </div>
          <div class="wide_search">
            <form class="search_form" 
              autocomplete="off" 
              method="GET"
              action="https://www.scribd.com/search?content_type=tops&page=1&language=1"
              target="_top">
              <label><input type="search" class="search_input" name="query" placeholder="Search the world's largest library" value="" aria-label="search"></label>
              <button class="flat_btn" id="search_btn" type="submit" aria-label="search">
                <i class="fas fa-search"></i>
              </button>
            </form>
          </div>
        </div>
        <div class="color_divider flex_row">
          <div class="seafoam_regular" style="width:4%"></div>
          <div class="teal_dark" style="width:12%"></div>
          <div class="teal_light" style="width:48%"></div>
          <div class="midnight_light" style="width:12%"></div>
          <div class="wine_light" style="width:16%"></div>
          <div class="yellow_dark" style="width:8%"></div>
        </div>
      </header>
    </div>

    <div id="doc_info">
      <h1 class="doc_title">[[doc_title]]</h1>
      <div class="publish_info"><span>Uploaded by </span><a href="[[uploadedBy_profileUrl]]">[[uploadedBy_userName]]</a><span> on [[uploadedDate]]</span></div>
      [[doc_description]]
    </div>

    <div class="sticky_header">
        <div class="icons_container">
            <button type="button" class="flat_btn" id="download_btn" aria-label="download">Download</button>
            <button type="button" class='secondary_button'><i class="fas fa-bookmark" aria-label="save"></i>Save</button>
            <button type="button" class='secondary_button'><i class="fas fa-info" aria-label="info"></i>Info</button>
            <!--<button type="button" class='secondary_button'><i class="fas fa-info-circle"></i>Info</button>-->
            <button type="button" class='secondary_button'><i class="fas fa-search" aria-label="search"></i>Search</button>
      </div>
    </div>

    <div class='sticky_footer'>
      <amp-accordion class="related_titles" animate>
        <section>
          <h4>RELATED TITLES</h4>
          <div>
            <amp-list height="200"
              layout="fixed-height"
              src="/json/relatedTitles.json">
              <div placeholder>Loading ...</div>
              <div fallback>Failed to load data.</div>
              <template type="amp-mustache">
                <amp-carousel id="alternate-images-carousel" width="50" 
                    type="slides" 
                    layout="responsive" 
                    controls
                    on="slideChange:AMP.setState({selected: { slide: event.index }})">
                    {{#popular}}
                    <div class='related_title'> 
                      <a href="{{relatedUrl}}">
                        <amp-img 
                          src="{{imageUrl}}"
                          height="155"
                          width="117"
                          alt="{{imageAlt}}"
                          class="related_title_img">
                        </amp-img>
                        <h5>{{title}}</h5>
                        <p class='author'>{{author}}</p>
                      </a>
                    </div>
                    {{/popular}}
                </amp-carousel>
            </template>
            </amp-list>
          </div>
        </section>
      </amp-accordion>
    </div>

    <div id="obscureScreen">
    </div>
    <div class="promo">
      <h2 class="title" role="presentation">You're Reading a Preview</h2>
      <p>Unlock full access with a free trial.</p>
      <button class="flat_btn" id="login_btn" type="button">Download With Free Trial</button>
    </div>
    <div id='mainContent'>
      [[{htmlContent}]]
    </div>

